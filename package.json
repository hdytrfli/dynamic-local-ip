{
  "name": "dynamic-local-ip-updater",
  "version": "1.0.4",
  "description": "A service that automatically updates a Cloudflare DNS record with your local machine's IP address",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "bump": "bumpp package.json"
  },
  "keywords": [
    "cloudflare",
    "dns",
    "ip",
    "updater"
  ],
  "author": "hdytrfli",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.1",
    "node-cron": "^4.2.1",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@types/node": "^24.3.0",
    "@types/node-cron": "^3.0.9",
    "@vitest/coverage-v8": "3.2.4",
    "bumpp": "^10.2.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
